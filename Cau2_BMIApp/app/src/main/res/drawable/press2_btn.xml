<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <size android:width="100dp"
                android:height="60dp"/>
            <gradient android:startColor="#3ABBCC"
                android:endColor="#DFB535"/>
            <corners android:radius="30dp"/>
            <stroke android:color="#B8B4B4"
                android:width="1dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <size android:width="100dp"
                android:height="60dp"/>
            <gradient android:startColor="#CA4F28"
                android:endColor="#CA463C"/>
            <corners android:radius="30dp"/>
            <stroke android:color="#000000"
                android:width="1dp"/>
        </shape>
    </item>
</selector>